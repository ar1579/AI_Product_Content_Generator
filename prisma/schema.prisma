// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model GeneratedContent {
  id                    String   @id @default(uuid())
  shop                  String
  productId             String
  selectedVariant       String?
  title                 String
  productDescription    String
  keyFeatures           String   // JSON string
  whyBuy                String   // JSON string
  faqs                  String   // JSON string
  imageRecommendations  String   // JSON string
  shortTailKeywords     String   // JSON string
  longTailKeywords      String   // JSON string
  shopifyTags           String   // JSON string
  metaTitle             String
  metaDescription       String
  metafields            String   // JSON string
  originalTitle         String
  originalDescription   String
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  expiresAt             DateTime // Cache expiration

  @@unique([shop, productId, selectedVariant])
  @@index([shop])
  @@index([productId])
  @@index([expiresAt])
}
